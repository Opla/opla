{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Opla",
    "version": "../../package.json"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost:8080/*",
          "https://localhost/*",
          "https://opla.ai/*"
        ]
      },
      "fs": {
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "removeDir": true,
        "createDir": true,
        "removeFile": true,
        "scope": ["$LOCALDATA/Opla/**/*", "$HOME/**", "$TEMP/*", "$DESKTOP/*", "$DOWNLOADS/*", "$DOCUMENTS/*"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$LOCALDATA/Opla/**/*", "$HOME/**", "$TEMP/*", "$DESKTOP/*", "$DOWNLOADS/*", "$DOCUMENTS/*"]
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "all": false,
      "path": {
        "all": true
      },
      "shell": {
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/llama.cpp/llama.cpp.server",
            "sidecar": true,
            "args": [
              "-m",
              {
                "validator": "\\S+"
              },
              "--port",
              {
                "validator": "\\S+"
              },
              "--host",
              {
                "validator": "\\S+"
              },
              "-c",
              {
                "validator": "\\S+"
              },
              "-t",
              {
                "validator": "\\S+"
              },
              "-ngl",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["binaries/llama.cpp/llama.cpp.server"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ai.opla.app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["assets/opla_default_config.json"],
      "shortDescription": "",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1280,
        "resizable": true,
        "title": "Opla",
        "width": 1600
      }
    ]
  }
}
